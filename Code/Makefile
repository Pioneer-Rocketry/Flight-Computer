######################################
# target
######################################
TARGET = Code


######################################
# building variables
######################################
# debug build?
DEBUG = 1
# optimization
OPT = -O0


#######################################
# paths
#######################################
# Build path
BUILD_DIR = build

# portable mkdir: use a make function so we can convert / to \\ on Windows
ifeq ($(OS),Windows_NT)
# On Windows, convert forward slashes to backslashes and use cmd conditional mkdir
define MKDIR
@if not exist "$(subst /,\\,$(1))" mkdir "$(subst /,\\,$(1))"
endef
else
# On Unix, use mkdir -p
define MKDIR
mkdir -p $(1)
endef
endif
# Usage: $(call MKDIR,<path>)

######################################
# source
######################################
# C sources
C_SOURCES =  \
$(shell find Core/Src -type f -name '*.c') \
$(shell find Drivers/STM32F4xx_HAL_Driver/Src -type f -name '*.c')

# C++ sources
CXX_SOURCES =  \
$(shell find Core/Src -type f -name '*.cpp') \


# TinyUSB library
-include lib/TinyUSB/src/tinyusb.mk
# Add DWC2 (Synopsys) device driver (STM32F4 uses DWC2)
# Expand actual files then convert to paths relative to lib/TinyUSB
DWC2_FILES := $(wildcard lib/TinyUSB/src/portable/synopsys/dwc2/*.c)
DWC2_REL := $(patsubst lib/TinyUSB/%,%,$(DWC2_FILES))
TINYUSB_SRC_C += $(DWC2_REL)
C_SOURCES += $(addprefix lib/TinyUSB/,$(TINYUSB_SRC_C))

# ASM sources
ASM_SOURCES =  \
startup_stm32f446xx.s

# ASMM sources
ASMM_SOURCES = 



#######################################
# binaries
#######################################
PREFIX = arm-none-eabi-
# The gcc compiler bin path can be either defined in make command via GCC_PATH variable (> make GCC_PATH=xxx)
# either it can be added to the PATH environment variable.
ifdef GCC_PATH
CC = $(GCC_PATH)/$(PREFIX)gcc
CXX = $(GCC_PATH)/$(PREFIX)g++
AS = $(GCC_PATH)/$(PREFIX)gcc -x assembler-with-cpp
CP = $(GCC_PATH)/$(PREFIX)objcopy
SZ = $(GCC_PATH)/$(PREFIX)size
else
CC = $(PREFIX)gcc
CXX = $(PREFIX)g++
AS = $(PREFIX)gcc -x assembler-with-cpp
CP = $(PREFIX)objcopy
SZ = $(PREFIX)size
endif
HEX = $(CP) -O ihex
BIN = $(CP) -O binary -S
 
#######################################
# CFLAGS
#######################################
# cpu
CPU = -mcpu=cortex-m4

# fpu
FPU = -mfpu=fpv4-sp-d16

# float-abi
FLOAT-ABI = -mfloat-abi=hard

# mcu
MCU = $(CPU) -mthumb $(FPU) $(FLOAT-ABI)

# macros for gcc
# AS defines
AS_DEFS = 

# C defines
C_DEFS =  \
-DUSE_HAL_DRIVER \
-DSTM32F446xx \
-DTUP_USBIP_DWC2 \
-DTUP_USBIP_DWC2_STM32 \
-DCFG_TUD_DWC2_SLAVE_ENABLE=1


# AS includes
AS_INCLUDES = 

# C includes
C_INCLUDES =  \
-ICore/Inc \
-IDrivers/STM32F4xx_HAL_Driver/Inc \
-IDrivers/STM32F4xx_HAL_Driver/Inc/Legacy \
-IDrivers/CMSIS/Device/ST/STM32F4xx/Include \
-IDrivers/CMSIS/Include \
-Ilib/TinyUSB/src


# compile gcc flags
ASFLAGS = $(MCU) $(AS_DEFS) $(AS_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections

CFLAGS += $(MCU) $(C_DEFS) $(C_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections

ifeq ($(DEBUG), 1)
CFLAGS += -g -gdwarf-2
endif


# Generate dependency information
CFLAGS += -MMD -MP -MF"$(@:%.o=%.d)"


#######################################
# LDFLAGS
#######################################
# link script
LDSCRIPT = STM32F446XX_FLASH.ld

# libraries
LIBS = -lc -lm -lnosys 
LIBDIR = 
LDFLAGS = $(MCU) -specs=nano.specs -T$(LDSCRIPT) $(LIBDIR) $(LIBS) -Wl,-Map=$(BUILD_DIR)/$(TARGET).map,--cref -Wl,--gc-sections
LDFLAGS += -u _printf_float

# default action: build all
all: $(BUILD_DIR)/$(TARGET).elf $(BUILD_DIR)/$(TARGET).hex $(BUILD_DIR)/$(TARGET).bin


#######################################
# build the application
#######################################
# list of objects (preserve directory structure under build/)
# Use $(sort ...) to remove any duplicate entries from generated lists
OBJECTS = $(sort $(addprefix $(BUILD_DIR)/,$(C_SOURCES:.c=.o) $(CXX_SOURCES:.cpp=.o) $(ASM_SOURCES:.s=.o) $(ASMM_SOURCES:.S=.o)))

$(BUILD_DIR)/%.o: %.c Makefile | $(BUILD_DIR) 
	$(call MKDIR,$(@D))
	$(CC) -c $(CFLAGS) -Wa,-a,-ad,-alms=$(BUILD_DIR)/$(notdir $(<:.c=.lst)) $< -o $@

$(BUILD_DIR)/%.o: %.cpp Makefile | $(BUILD_DIR)
	$(call MKDIR,$(@D))
	$(CXX) -c $(CFLAGS) -o $@ $<

$(BUILD_DIR)/%.o: %.s Makefile | $(BUILD_DIR)
	$(call MKDIR,$(@D))
	$(AS) -c $(CFLAGS) $< -o $@
$(BUILD_DIR)/%.o: %.S Makefile | $(BUILD_DIR)
	$(call MKDIR,$(@D))
	$(AS) -c $(CFLAGS) $< -o $@

$(BUILD_DIR)/$(TARGET).elf: $(OBJECTS) Makefile
	$(CXX) $(OBJECTS) $(LDFLAGS) -o $@
	$(SZ) $@

$(BUILD_DIR)/%.hex: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(HEX) $< $@
	
$(BUILD_DIR)/%.bin: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(BIN) $< $@	
	
$(BUILD_DIR):
	$(call MKDIR,$@)		

#######################################
# clean up
#######################################
clean:
ifeq ($(OS),Windows_NT)
	-rmdir /S /Q $(BUILD_DIR)
else
	-rm -fR $(BUILD_DIR)
endif
  
#######################################
# dependencies
#######################################
-include $(wildcard $(BUILD_DIR)/*.d)

# Flash with ST-LINK
stflash: $(BUILD_DIR)/$(TARGET).bin
	st-flash --reset write $< 0x08000000
	
# Clean build
cleanbuild: clean all

# Build and Flash
buildflash: all stflash

